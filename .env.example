# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Override default OpenAI API base URL
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_API_TIMEOUT=30

# Optional: Server configuration (defaults shown)
# HOST=127.0.0.1
# PORT=8000
# DEBUG=False
# LOG_SENSITIVE_DATA=False  # Enable verbose logging of user data (dev only, security risk in prod)

# Optional: CORS configuration
# CORS_ENABLED=True
# CORS_ORIGINS=*  # For production, use explicit origins: http://localhost:3000,https://example.com

# Optional: Memory database configuration
# CCC_DATABASE_PATH=ccc_memory.db
# CCC_CAUSAL_DATABASE_PATH=ccc_causal_memory.db
# MEMORY_CACHE_TIMEOUT=300
# MEMORY_INIT_TIMEOUT=60

# Optional: Encryption settings (disabled by default for development)
# CCC_ENCRYPTION_ENABLED=false
# CCC_ENCRYPTION_KEY=your_secure_encryption_key_here

# Optional: Crucible Protocol configuration
# CRUCIBLE_DEFAULT_TIMEOUT=30
# CRUCIBLE_MAX_TIMEOUT=300
# CRUCIBLE_MAX_RETRIES=3

# Optional: Context Analyzer configuration
# CONTEXT_SIMILARITY_THRESHOLD=0.7
# CONTEXT_MAX_AGE_HOURS=24
# CONTEXT_MAX_TURNS=10

# Optional: Causal Memory configuration
# CAUSAL_SIMILARITY_THRESHOLD=0.5
# CAUSAL_MAX_POTENTIAL_CAUSES=5
# CAUSAL_TIME_DECAY_HOURS=24
# CAUSAL_LLM_MODEL=gpt-3.5-turbo
# CAUSAL_LLM_TEMPERATURE=0.7